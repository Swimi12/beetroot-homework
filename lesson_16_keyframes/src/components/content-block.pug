mixin content-block()
  section.content-block
    .wrapper.content-block__wrapper 
      h1.content-block__title Hover on photo
      .content-block__list.content-block__list--1
        .content-block__square
        .content-block__item.content-block__item--a
          img(src="./assets/images/photo-1.jpg" alt="photo").content-block__photo
          .content-block__buttons
            button(type='button').content-block__button
              svg.icon.icon-like
                use(xlink:href='#icon-like')
            button(type='button').content-block__button
              svg.icon.icon-download
                use(xlink:href='#icon-download')
          .content-block__text
            span Jezael Melgoza
            span.content-block__date 5 June 2020
